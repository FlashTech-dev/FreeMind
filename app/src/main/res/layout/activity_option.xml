<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".OptionActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/windowBackground"
        android:id="@+id/bar">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="45sp"
            android:background="?android:attr/windowBackground">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/option"
                    android:text="Options"
                    android:fontFamily="@font/comfortaa_bold"
                    android:textColor="#071e22"
                    android:textSize="18sp"
                    android:layout_centerVertical="true"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_close"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="10dp"
                    android:layout_centerVertical="true"
                    android:id="@+id/close"/>


            </RelativeLayout>


        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bar"
        android:padding="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="App Updates"
            android:id="@+id/appupdates"
            android:padding="5dp"
            android:fontFamily="@font/comfortaa_regular"
            android:textColor="#1d7874"
            android:textSize="18dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Change Email"
            android:id="@+id/changeemail"
            android:padding="5dp"
            android:fontFamily="@font/comfortaa_regular"
            android:textColor="#1d7874"
            android:textSize="18dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Change Password"
            android:id="@+id/changepassword"
            android:padding="5dp"
            android:fontFamily="@font/comfortaa_regular"
            android:textColor="#1d7874"
            android:textSize="18dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Data Policy"
            android:id="@+id/datapolicy"
            android:padding="5dp"
            android:fontFamily="@font/comfortaa_regular"
            android:textColor="#1d7874"
            android:textSize="18dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Open-source Libraries"
            android:id="@+id/libraries"
            android:padding="5dp"
            android:fontFamily="@font/comfortaa_regular"
            android:textColor="#1d7874"
            android:textSize="18dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Terms of Use"
            android:id="@+id/tou"
            android:padding="5dp"
            android:fontFamily="@font/comfortaa_regular"
            android:textColor="#1d7874"
            android:textSize="18dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ads"
            android:id="@+id/ads"
            android:padding="5dp"
            android:fontFamily="@font/comfortaa_regular"
            android:textColor="#1d7874"
            android:textSize="18dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Developers"
            android:id="@+id/developers"
            android:padding="5dp"
            android:fontFamily="@font/comfortaa_regular"
            android:textColor="#1d7874"
            android:textSize="18dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="About Us"
            android:id="@+id/aboutus"
            android:padding="5dp"
            android:fontFamily="@font/comfortaa_regular"
            android:textColor="#1d7874"
            android:textSize="18dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:id="@+id/logout"
            android:padding="5dp"
            android:fontFamily="@font/comfortaa_regular"
            android:textColor="#ff0000"
            android:textSize="18dp"
            android:layout_marginTop="20dp"/>


    </LinearLayout>

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-9930376729131413/7877277132"
        android:visibility="visible"/>

</RelativeLayout>